<%= form_tag({controller: "posts", action: "create"}, multipart: true, method: "post", class: "form-horizontal",role: "form") do %>
  <div class="form-group">
    <label for="title">Title</label>
    <%= text_field(:post,:title,id:"title",class:"form-control") %>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <%= text_area(:post,:description,id:"description",class:"form-control",row:"3") %>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <%= file_field(:post,:image,id:"image") %>
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <%= text_area(:post,:content,id:"content",class:"form-control",row:"7") %>
    <script>
      CKEDITOR.replace( 'content' );

    </script>
  </div>
  <div class="form-group" style="margin-left: 0px;">
    <%= check_box(:post, :status, class:"form-group", id:"status") %>
    <span style="margin-left:15px;">Enable</span>
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
  <button type="reset" class="btn btn-primary">Cancel</button>
  <a href="#preview"><button type="button" class="btn btn-primary preview">Preview</button></a>
<% end %>