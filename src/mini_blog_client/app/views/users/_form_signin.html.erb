<%= form_tag({controller: "users", action: "login"}, method: "post",role: "form", style: "margin-top:50px") do %>
  <div class="container-fluid">
  <div class="col-md-6 col-md-offset-1">
      <div class="form-group">
        <label for="username">Username</label>
        <%= text_field(:user,:username,id:"username",class:"form-control") %>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <%= password_field(:user,:password,id:"password",class:"form-control",value:"") %>
      </div>
      <button type="submit" class="btn btn-primary" style="border-radius:0px;">Login</button>
    </div>
  </div>
<% end %>